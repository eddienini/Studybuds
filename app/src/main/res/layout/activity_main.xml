<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="HardcodedText,UselessParent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/uwPurple">

    <!--Navigation Container-->
    <LinearLayout
        android:id="@+id/navigationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/uwPurple"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp">
            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="125dp"
                android:layout_height="80dp"
                android:contentDescription="Home Button"
                android:src="@drawable/home_button_foreground"
                android:background="@drawable/oval_light_purple"
                android:padding="11dp"
                android:scaleX="0.75"
                android:scaleY="0.75" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="-10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp">
            <ImageButton
                android:id="@+id/mapButton"
                android:layout_width="125dp"
                android:layout_height="80dp"
                android:contentDescription="Map Button"
                android:src="@drawable/map_button_foreground"
                android:background="@drawable/oval_dark_purple"
                android:padding="11dp"
                android:scaleX="0.75"
                android:scaleY="0.75"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Map"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="-10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp">
            <ImageButton
                android:id="@+id/classesButton"
                android:layout_width="125dp"
                android:layout_height="80dp"
                android:contentDescription="Classes Button"
                android:src="@drawable/book_button_foreground"
                android:background="@drawable/oval_dark_purple"
                android:padding="11dp"
                android:scaleX="0.75"
                android:scaleY="0.75"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classes"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="-10dp"/>
        </LinearLayout>
    </LinearLayout>

    <!--Home Page-->
    <ScrollView
        android:id="@+id/homePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/offWhite"
        android:layout_above="@id/navigationContainer"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="home"/>
    </ScrollView>

    <!--Map Page-->
    <ScrollView
        android:id="@+id/mapPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigationContainer"
        android:layout_marginBottom="0dp"
        android:background="@color/offWhite"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/headerPurple"
                android:gravity="center"
                android:padding="11dp"
                android:text="Map"
                android:textSize="35sp"
                android:textStyle="bold" />
            
        </LinearLayout>

    </ScrollView>

    <!--Classes Page-->
    <ScrollView
        android:id="@+id/classesPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/offWhite"
        android:layout_above="@id/navigationContainer"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="classes"/>
    </ScrollView>

</RelativeLayout>
